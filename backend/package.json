{
  "name": "deployhub-backend",
  "version": "1.0.0",
  "description": "DeployHub Backend - Self-hosted CI/CD platform server and agent",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run agent:start\"",
    "server:dev": "cd server && npm run dev",
    "server:start": "cd server && npm start",
    "agent:start": "cd agent && npm start",
    "start": "node server-agent-start.js",
    "start:server": "npm run server:start",
    "install-all": "npm install && cd server && npm install && cd ../agent && npm install",
    "clean": "rm -rf server/node_modules agent/node_modules server/package-lock.json agent/package-lock.json"
  },
  "keywords": ["ci-cd", "deployment", "self-hosted", "backend", "api", "agent"],
  "author": "DeployHub Team",
  "license": "MIT",
  "dependencies": {
    "concurrently": "^8.2.2"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
